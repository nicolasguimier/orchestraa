<div class="container">
  <div class="row">
    <div class="col-12 col-lg-3">
      <div class="box">
        <h1 class="icon icon-concert"><%= @concert.name %></h1>
        <p>Find me in app/views/concerts/show.html.erb</p>
        <ul style="border-bottom:1px solid black">
          <li>location: <%= @concert.location %>,</li>
          <li>address: <%= @concert.address %>,</li>
          <li>notes: <%= @concert.notes %>,</li>
          <li>start_at: <%= @concert.start_at %>,</li>
          <li>end_at: <%= @concert.end_at %></li>
          <%= link_to "BACK TO INDEX", concerts_path%>
        </ul>
      </div>
      <div class="box">
        Map
      </div>
    </div>
    <div class="col-12 col-lg-9">
      <div class="box dark_box program">
        <h2>Program</h2>
          <% @program_steps.each do |program_step| %>
            <% if program_step.kind == "intermission" %>
              <div class="box intermission">Intermission</div>
            <% else %>
              <div class="box program-step">
                <div class="icon-drag"></div>
                <div class="composer"><%= program_step.musical_work.composer_name %></div>
                <div class="work-infos">
                  <p><%= program_step.musical_work.title %> (<%= program_step.musical_work.duration %> min)</p>
                  <p class="orange"><%= link_to musical_work_path "Missing trompets", (program_step.musical_work) %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
